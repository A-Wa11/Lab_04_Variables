public class Main {
    public static void main(String[] args) {
        double balance = 5000.0;
        double annualRate = 0.17;
        double monthlyRate = annualRate / 12;

        // After one month
        double balanceAfter1Month = balance * (1 + monthlyRate);
        double interest1Month = balanceAfter1Month - balance;

        // After two months
        double balanceAfter2Months = balanceAfter1Month * (1 + monthlyRate);
        double interest2Months = balanceAfter2Months - balance;

        System.out.printf("Interest due after one month: $%.2f%n", interest1Month);
        System.out.printf("Interest due after two months: $%.2f%n", interest2Months);
    }
}
